# Operator Group for RH-SSO
- apiVersion: operators.coreos.com/v1
  kind: OperatorGroup
  metadata:
    name: {{ rhbk_project_name }}-operatorgroup
    namespace: {{ rhbk_project_name }}
  spec:
    targetNamespaces:
    - {{ rhbk_project_name }}

# Operator Subscription
- apiVersion: operators.coreos.com/v1alpha1
  kind: Subscription
  metadata:
    name: rhbk-operator
    namespace: {{ rhbk_project_name }}
  spec:
    channel: stable-v24
    installPlanApproval: Automatic
    name: rhbk-operator
    source: redhat-operators
    sourceNamespace: openshift-marketplace
    startingCSV: {{ rhbk_operator_version }}
